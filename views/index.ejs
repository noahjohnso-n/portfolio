<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel = "stylesheet" href = "/styles/styles.css">
    <link rel="stylesheet" href="https://use.typekit.net/xns2gbc.css">

    <!-- J QUERY -->
    <script src="https://code.jquery.com/jquery-3.7.1.min.js" integrity="sha256-/JqT3SQfawRcv/BIHPThkBvs0OEvtFFmqPF/lYI/Cxo=" crossorigin="anonymous"></script>
    <!-- J QUERY -->

    <title>Noah Johnson</title>
</head>
<body>

    <script>
        $(document).ready(function(){
            $("#intro").animate({left: "-=1000px"}, 800);
            $("#job").animate({right: "-=1000px"}, 800);
            $("#view-work").delay(1000).animate({top: '-=100px', opacity: "1"}, 500);

            $("#about-title").hover(function (){
                $("#about-me-over").animate({width: '+=100%'}, "200");
            }, function(){
                $("#about-me-over").animate({width: '-=100%'}, "200");
            });

            $("#project-title").hover(function (){
                $("#project-over").animate({width: '+=100%'}, 300);
            }, function(){
                $("#project-over").animate({width: '-=100%'}, 300);
            });

            $("#tickr-title").hover(function (){
                $("#tickr-over").animate({width: '+=100%'}, 300);
            }, function(){
                $("#tickr-over").animate({width: '-=100%'}, 300);
            });

            $("#tickr-live-title").hover(function (){
                $("#tickr-live-over").animate({width: '+=100%'}, 300);
            }, function(){
                $("#tickr-live-over").animate({width: '-=100%'}, 300);
            });

            $("#tickr-git-title").hover(function (){
                $("#tickr-git-over").animate({width: '+=100%'}, 300);
            }, function(){
                $("#tickr-git-over").animate({width: '-=100%'}, 300);
            });

            $("#dreamlock-title").hover(function (){
                $("#dreamlock-over").animate({width: '+=100%'}, 300);
            }, function(){
                $("#dreamlock-over").animate({width: '-=100%'}, 300);
            });

            $("#dreamlock-live-title").hover(function (){
                $("#dreamlock-live-over").animate({width: '+=100%'}, 300);
            }, function(){
                $("#dreamlock-live-over").animate({width: '-=100%'}, 300);
            });

            $("#dreamlock-git-title").hover(function (){
                $("#dreamlock-git-over").animate({width: '+=100%'}, 300);
            }, function(){
                $("#dreamlock-git-over").animate({width: '-=100%'}, 300);
            });

            $("#tickr-back").hover(function () {
                $("#tickr-back").addClass("active");
            });

            $("#dreamlock-back").hover(function () {
                $("#dreamlock-back").addClass("active");
            });

            $("#view-work").click(function (){
                const targetOffset = $("#about").offset().top;
                window.scrollTo({
                    top: targetOffset,
                    behavior: "smooth"
                });
            });
        });
    </script>

